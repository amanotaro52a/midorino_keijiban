<%= search_form_for q, url: url, method: :get, html: { class: 'row g-2 align-items-center' } do |f| %>

  <div class=" col-sm-6 col-md-4 col-lg-auto">
    <%= f.search_field :title_or_summary_content_cont, 
                       class: 'form-control', 
                       placeholder: t('search_form.placeholders.free_keyword') %>
  </div>

  <div class="col-sm-6 col-md-4 col-lg-auto">
    <%= f.search_field :plant_name_cont, 
                       class: 'form-control', 
                       placeholder: t('search_form.placeholders.plant_name'), 
                       id: 'plant_name_search' %>
  </div>

  <div class="col-sm-6 col-md-4 col-lg-auto">
    <%= f.search_field :variety_name_cont, 
                       class: 'form-control', 
                       placeholder: t('search_form.placeholders.variety_name') %>
  </div>

  <div class="col-sm-6 col-md-4 col-lg-auto">
    <%= f.select :cultivation_method_eq, 
                 options_for_select(
                   [[t('search_form.options.cultivation_methods.ground'), '地植え'], 
                    [t('search_form.options.cultivation_methods.planter'), 'プランター・鉢植え'], 
                    [t('search_form.options.cultivation_methods.other'), 'その他']]
                 ), 
                 { include_blank: t('search_form.placeholders.cultivation_method') }, 
                 class: 'form-select' %>
  </div>

  <div class="col-sm-6 col-md-4 col-lg-auto">
    <%= f.select :cultivation_location_eq, 
                 options_for_select(
                   [[t('search_form.options.cultivation_locations.field'), '畑'], 
                    [t('search_form.options.cultivation_locations.garden'), '庭'], 
                    [t('search_form.options.cultivation_locations.balcony'), 'ベランダ'], 
                    [t('search_form.options.cultivation_locations.indoor'), '室内'], 
                    [t('search_form.options.cultivation_locations.other'), 'その他']]
                 ), 
                 { include_blank: t('search_form.placeholders.cultivation_location') }, 
                 class: 'form-select' %>
  </div>

  <div class="col-auto">
    <%= f.submit t('search_form.buttons.search'), class: 'btn btn-success' %>
  </div>
<% end %>
