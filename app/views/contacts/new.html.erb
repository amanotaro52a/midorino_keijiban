<div class="container">
  <div class="row">
    <div class="col-md-10 col-lg-8 mx-auto">
      <h1 style="color: #006400;"><%= t('.title') %></h1>
      <%= form_with(model: @contact, local: true) do |f| %>
        <%= render 'shared/error_messages', object: f.object %>
        <div class="mb-3">
          <%= f.label :name, t('.name'), class: "form-label" %>
          <%= f.text_field :name, class: "form-control" %>
        </div>
        <div class="mb-3">
          <%= f.label :email, t('.email'), class: "form-label" %>
          <%= f.email_field :email, class: "form-control" %>
        </div>
        <div class="mb-3">
          <%= f.label :content, t('.content'), class: "form-label" %>
          <%= f.text_area :content, placeholder: t('.content_placeholder'), rows: 5, class: "form-control" %>
        </div>
        <div class="text-center">
          <%= f.submit t('.submit'), class: "btn btn-success" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
